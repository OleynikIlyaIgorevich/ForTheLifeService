<Window
    x:Class="ForTheLife.Views.UpdateProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ForTheLife.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ForTheLife.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Обновление товара"
    Width="1480"
    Height="750"
    MinWidth="1480"
    MinHeight="750"
    FontFamily="Comic Sans MS"
    Icon="..\Resources\Images\picture.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
            <RowDefinition Height="100" />


        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="Добавление товара" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>



            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="Артикул" />
                <TextBox x:Name="ArticleTB" />

                <TextBlock Text="Наименование" />
                <ComboBox
                    x:Name="ProductsNamesCB"
                    DisplayMemberPath="Title"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Выберите наименовавание" />

                <TextBlock Text="Категория" />
                <ComboBox
                    x:Name="CategoriesCB"
                    DisplayMemberPath="Title"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Выберите категорию" />

                <TextBlock Text="Производитель" />
                <ComboBox
                    x:Name="ProducersCB"
                    DisplayMemberPath="Title"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Выберите производителя " />

                <TextBlock Text="Поставщик" />
                <ComboBox
                    x:Name="SuppliersCB"
                    DisplayMemberPath="Title"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Выберите поставщика" />

                <TextBlock Text="Единица измерения" />
                <ComboBox
                    x:Name="UnitsCB"
                    DisplayMemberPath="Title"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Выберите единицу измрения" />

                <TextBlock Text="Цена" />
                <TextBox x:Name="PriceTB" />

                <TextBlock Text="Максимальная скидка" />
                <TextBox x:Name="MaxSaleTB" />

                <TextBlock Text="Действующая скидка" />
                <TextBox x:Name="CurrentSaleTB" />

                <TextBlock Text="Кол-во на складе" />
                <TextBox x:Name="CountTB" />

                <TextBlock Text="Описание" />
                <TextBox
                    x:Name="DesciptionTB"
                    AcceptsReturn="True"
                    HorizontalScrollBarVisibility="Disabled"
                    MaxLines="5"
                    MinLines="5"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />


            </StackPanel>

            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition />
                    <RowDefinition Height="70" />

                </Grid.RowDefinitions>

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Изображение товара" />

                <Border
                    Grid.Row="1"
                    MinWidth="300"
                    MinHeight="300"
                    MaxWidth="350"
                    MaxHeight="350"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <Image x:Name="SelectedImage" Margin="10" />

                </Border>
                <Button
                    Grid.Row="2"
                    Margin="20"
                    Click="LoadImageUrl"
                    Content="Выбрать файл" />
            </Grid>
        </Grid>

        <StackPanel Grid.Row="2" Margin="20">
            <Button Click="UpdateProduct" Content="Обновить товар" />
            <Separator Height="10" Visibility="Hidden" />
            <Button Click="DeleteProduct" Content="Удалить товар" />

        </StackPanel>


    </Grid>
</Window>
