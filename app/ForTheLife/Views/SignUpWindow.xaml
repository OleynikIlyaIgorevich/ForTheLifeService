<Window
    x:Class="ForTheLife.Views.SignUpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ForTheLife.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Регистрация"
    Width="400"
    Height="600"
    MinWidth="400"
    MinHeight="600"
    FontFamily="Comic Sans MS"
    Icon="..\Resources\Images\picture.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />

        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="Регистрация" />

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock FontSize="18" Text=" Фамилия" />
            <TextBox x:Name="LastNameTB" />

            <TextBlock FontSize="18" Text=" Имя" />
            <TextBox x:Name="FirstNameTB" />

            <TextBlock FontSize="18" Text=" Отчество" />
            <TextBox x:Name="MiddleNameTB" />

            <TextBlock FontSize="18" Text=" Имя пользователя" />
            <TextBox x:Name="UsernameTB" />
            <TextBlock FontSize="18" Text=" Пароль" />
            <PasswordBox x:Name="PasswordPB" />

            <Separator Height="20" Visibility="Hidden" />

            <Button Click="SignUp">
                <TextBlock Margin="10" Text="Зарегистрироватся" />
            </Button>
        </StackPanel>


    </Grid>
</Window>
